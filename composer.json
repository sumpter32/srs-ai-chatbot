{
    "name": "srswebsolutions/srs-ai-chatbot",
    "description": "A comprehensive AI chatbot plugin for WordPress with multi-provider support",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "SRS Designs LLc",
            "email": "support@srsdesignsllc.com",
            "homepage": "https://srsdesignsllc.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "smalot/pdfparser": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "SRSWebSolutions\\AIChat\\": "includes/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress .",
        "phpcbf": "phpcbf --standard=WordPress ."
    },
    "config": {
        "vendor-dir": "vendor",
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "classmap-authoritative": true
    }
}
